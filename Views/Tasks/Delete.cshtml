@model TaskManagementSystem.Models.Task

@{
    ViewData["Title"] = "Eliminar Tarefa";
}
<div class="container">
<div class="pagetitle d-flex justify-content-between">
    <div class="">
        <h1>Eliminar Tarefa</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Inicio</a></li>
                <li class="breadcrumb-item"><a asp-controller="Tasks" asp-action="Index">Tarefas</a></li>
                <li class="breadcrumb-item active"><a asp-controller="Tasks" asp-action="Delete">Eliminar</a></li>
            </ol>
        </nav>
    </div>
    <div class="col-2">
        <a asp-action="Index" class="btn btn-secondary text-white col-12"><i class="bi bi-list"></i></a>
    </div>
</div>

<section class="section section register min-vh-100 d-flex flex-column align-items-center py-4">
    <div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-6 d-flex flex-column align-items-center justify-content-center">
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">Confirmar Eliminação</h5>

                    <div class="alert alert-danger">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        <strong>Atenção!</strong> Esta ação não pode ser desfeita. Tem certeza que deseja eliminar esta
                        tarefa?
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-3 col-form-label fw-bold">Título:</label>
                        <div class="col-sm-9">
                            <p class="form-control-plaintext">@Model.Title</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-3 col-form-label fw-bold">Funcionário:</label>
                        <div class="col-sm-9">
                            <p class="form-control-plaintext">@Model.Worker?.Name</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-3 col-form-label fw-bold">Prazo:</label>
                        <div class="col-sm-9">
                            <p class="form-control-plaintext">@Model.Deadline.ToString("dd/MM/yyyy")</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-3 col-form-label fw-bold">Status:</label>
                        <div class="col-sm-9">
                            <span class="badge 
                                @(Model.Status == "Concluída" ? "bg-success" :
                                                                    Model.Status == "Em Progresso" ? "bg-warning" : 
                                                                    Model.Status == "Pendente" ? "bg-secondary" : "bg-danger")">
                                @Model.Status
                            </span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-3 col-form-label fw-bold">Tipo:</label>
                        <div class="col-sm-9">
                            <p class="form-control-plaintext">@Model.Type</p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12">
                            <form asp-action="Delete" method="post" class="d-inline">
                                <input type="hidden" asp-for="Id" />
                                <button type="submit" class="btn btn-danger me-2">
                                    <i class="bi bi-trash"></i> Eliminar
                                </button>
                            </form>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
</section>
</div>
