@model TaskManagementSystem.Models.User
@{
    ViewData["Title"] = "Login";
    Layout = "_LayoutNoSideBar";
}

<div class="container">
  <section
    class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4"
  >
    <div class="container">
      <div class="row justify-content-center">
        <div
          class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center"
        >
          <div class="d-flex justify-content-center py-4">
            <a class="logo d-flex align-items-center w-auto">
              <img src="~/img/logo.png" alt="" />
              <span class="d-none d-lg-block">TASKMAN</span>
            </a>
          </div>
          <!-- End Logo -->

          <div class="card mb-3">
            <div class="card-body">
              <div class="pt-4 pb-2">
                <h5 class="card-title text-center pb-0 fs-4">
                  Entre na sua conta
                </h5>
                <!-- <p class="text-center small">Enter your username & password to login</p> -->
              </div>
                              @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger" role="alert">
                        <i class="bi bi-exclamation-triangle"></i> @ViewBag.Error
                    </div>
                }

              <form class="login row g-3 needs-validation" method="post" asp-action="Login" novalidate>
                    @Html.AntiForgeryToken()
                <div class="col-12">
                  <label asp-for="WorkerId" class="form-label"
                    >CÃ³digo de utilizador</label>
                  <div class="input-group has-validation">
                    <span class="input-group-text" id="inputGroupPrepend"
                      >@@</span
                    >
                    <input
                    asp-for="WorkerId"
                      type="text"
                      class="form-control"
                      id="yourUsername"
                      required
                    />
                    <div class="invalid-feedback">
                      Por favor, introduza o seu <strong>id</strong> de utilizador.
                    </div>
                  </div>
                </div>

                <div class="col-12">
                  <label asp-for="Password" class="form-label"
                    >Palavra-passe</label>
                  <input
                    type="password"
                    asp-for="Password"
                    class="form-control"
                    id="yourPassword"
                    required
                  />
                  <div class="invalid-feedback">
                    Por favor, introduza a sua palavra-passe!
                  </div>
                </div>

                <div class="col-12">
                  <div class="form-check">
                    <input
                      class="form-check-input"
                      type="checkbox"
                      name="remember"
                      value="true"
                      id="rememberMe"
                    />
                    <label class="form-check-label" for="rememberMe"
                      >Lembre-se de mim</label
                    >
                  </div>
                </div>
                <div class="col-12">
                  <button class="btn btn-primary w-100" type="submit">
                    Login
                  </button>
                </div>
                <div class="col-12">
                  <p class="small mb-0">
                    Nao tem uma conta?
                    <a asp-action="Register">Inscreva-se</a>
                  </p>
                </div>
              </form>
            </div>
          </div>

          <div class="credits">
            <!-- Designed by <a href="https://bootstrapmade.com/">BootstrapMade</a> -->
          </div>
        </div>
      </div>
    </div>
  </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}