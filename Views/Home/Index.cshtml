@model List<TaskManagementSystem.Models.Task>
@{
    ViewData["Title"] = "Dashboard";
}

<div class="row">
    <div class="col-12">
        <h1 class="display-4">
            <i class="bi bi-speedometer2"></i> Dashboard
        </h1>
        <p class="lead">Bem-vindo ao Sistema de Gestão de Tarefas</p>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>@ViewBag.WorkersCount</h4>
                        <p class="mb-0">Funcionários</p>
                    </div>
                    <div class="align-self-center">
                        <i class="bi bi-people fs-1"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <a asp-controller="Workers" asp-action="Index" class="text-white text-decoration-none">
                    <small>Ver todos <i class="bi bi-arrow-right"></i></small>
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>@ViewBag.TasksCount</h4>
                        <p class="mb-0">Total de Tarefas</p>
                    </div>
                    <div class="align-self-center">
                        <i class="bi bi-list-task fs-1"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <a asp-controller="Tasks" asp-action="Index" class="text-white text-decoration-none">
                    <small>Ver todas <i class="bi bi-arrow-right"></i></small>
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card bg-warning text-dark">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>@ViewBag.PendingTasksCount</h4>
                        <p class="mb-0">Pendentes</p>
                    </div>
                    <div class="align-self-center">
                        <i class="bi bi-clock fs-1"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <small>Tarefas em aberto</small>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>@ViewBag.CompletedTasksCount</h4>
                        <p class="mb-0">Concluídas</p>
                    </div>
                    <div class="align-self-center">
                        <i class="bi bi-check-circle fs-1"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <small>Tarefas finalizadas</small>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="bi bi-list"></i> Tarefas Recentes
                </h5>
                <a asp-controller="Tasks" asp-action="Create" class="btn btn-primary btn-sm">
                    <i class="bi bi-plus"></i> Nova Tarefa
                </a>
            </div>
            <div class="card-body">
                @if (Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Título</th>
                                    <th>Funcionário</th>
                                    <th>Tipo</th>
                                    <th>Status</th>
                                    <th>Prazo</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var task in Model)
                                {
                                    <tr>
                                        <td>@task.Title</td>
                                        <td>@task.Worker.Name</td>
                                        <td>
                                            <span class="badge bg-secondary">@task.Type</span>
                                        </td>
                                        <td>
                                            @switch (task.Status)
                                            {
                                                case "Pendente":
                                                    <span class="badge bg-warning">@task.Status</span>
                                                    break;
                                                case "Em Progresso":
                                                    <span class="badge bg-info">@task.Status</span>
                                                    break;
                                                case "Concluída":
                                                    <span class="badge bg-success">@task.Status</span>
                                                    break;
                                                default:
                                                    <span class="badge bg-danger">@task.Status</span>
                                                    break;
                                            }
                                        </td>
                                        <td>@task.Deadline.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            <a asp-controller="Tasks" asp-action="Details" asp-route-id="@task.Id" 
                                               class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="bi bi-inbox display-1 text-muted"></i>
                        <h4 class="text-muted">Nenhuma tarefa encontrada</h4>
                        <p class="text-muted">Comece criando uma nova tarefa.</p>
                        <a asp-controller="Tasks" asp-action="Create" class="btn btn-primary">
                            <i class="bi bi-plus"></i> Criar Primeira Tarefa
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
