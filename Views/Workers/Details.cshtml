@model TaskManagementSystem.Models.Worker
@{
    ViewData["Title"] = "Funcionario";
}

<div class="pagetitle d-flex justify-content-between">
    <div class="">
        <h1>Funcionário</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="breadcrumb-item"><a asp-controller="Workers" asp-action="Index">Funcionário</a></li>
                <li class="breadcrumb-item active">Visualizar</li>
            </ol>
        </nav>
    </div>

    <div class="col-2">
        <a href="#/tasks/register" data-navigo class="btn btn-secondary text-white col-12"><i
                class="bi bi-plus"></i></a>
    </div>
</div>
<!-- End Page Title -->

<section class="section profile">
    <div class="row d-flex justify-content-center">
        <div class="col-xl-8">
            <div class="card">
                <div class="card-body pt-3">
                    <!-- Bordered Tabs -->
                    <ul class="nav nav-tabs nav-tabs-bordered">
                        <li class="nav-item">
                            <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#profile-overview">
                                Visualizar
                            </button>
                        </li>

                        <li class="nav-item">
                            <button class="nav-link" data-bs-toggle="tab" data-bs-target="#profile-edit">
                                Editar
                            </button>
                        </li>
                    </ul>
                    <div class="tab-content pt-2">
                        <div class="tab-pane fade show active profile-overview" id="profile-overview">
                            @* <h5 class="card-title">Descrição</h5>
              <p class="small fst-italic">
                Sunt est soluta temporibus accusantium neque nam maiores cumque
                temporibus. Tempora libero non est unde veniam est qui dolor. Ut
                sunt iure rerum quae quisquam autem eveniet perspiciatis odit.
                Fuga sequi sed ea saepe at unde.
              </p> *@

                            <h5 class="card-title">Detalhes</h5>

                            <div class="worker row">
                                <div class="col-lg-3 col-md-4 label">Nome do funcionario</div>
                                <div class="col-lg-9 col-md-8 worker-name">@Model.Name</div>
                            </div>

                            <div class="task row">
                                <div class="col-lg-3 col-md-4 label">Sexo</div>
                                <div class="col-lg-9 col-md-8 worker-name">@Model.Gender</div>
                            </div>

                            <div class="task row">
                                <div class="col-lg-3 col-md-4 label">Cargo/Função</div>
                                <div class="col-lg-9 col-md-8 worker-name">@Model.Position</div>
                            </div>

                            <div class="deadline row">
                                <div class="col-lg-3 col-md-4 label">Data de registo</div>
                                <div class="col-lg-9 col-md-8 task-deadline">@Model.CreatedAt</div>
                            </div>

                            <div class="row">
                                <div class="col-lg-3 col-md-4 label">Numero do funcionario</div>
                                <div class="col-lg-9 col-md-8 task-id">@Model.Id</div>
                            </div>
                        </div>

                        <div class="tab-pane fade profile-edit pt-3" id="profile-edit">
                            <!-- Profile Edit Form -->
                            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
                            <form asp-controller="Workers" asp-action="Edit" method="post">
                                @Html.AntiForgeryToken()

                                <div class="row mb-3">
                                    <label asp-for="Name" class="col-md-4 col-lg-3 col-form-label">Nome Completo</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="Name" type="text" class="form-control" id="name" required />
                                    </div>
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                </div>

                                <div class="row mb-3">
                                    <label aso-for="Gender" class="fcol-md-4 col-lg-3 col-form-label">Sexo</label>
                                    <div class="col-md-8 col-lg-9 d-flex justify-content-between mb-2">
                                        <div class="form-check">
                                            <input asp-for="Gender" class="form-check-input" type="radio" value="M" />
                                            <label asp-for="Gender" class="form-check-label">
                                                Masculino
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <input asp-for="Gender" class="form-check-input" type="radio"
                                                id="female-radio" value="F" />
                                            <label asp-for="Gender" class="form-check-label">
                                                Feminino
                                            </label>
                                        </div>
                                    </div>
                                    @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
                                </div>

                                <div class="row mb-3">
                                    <label asp-for="Position" class="col-md-4 col-lg-3 col-form-label">Cargo/Função</label>
                                    <div class="col-md-8 col-lg-9">
                                        <select asp-for="Position" class="position-select form-select" asp-items="ViewBag.PositionOptions"
                                        aria-label="Default select example">
                                        </select>
                                        @Html.ValidationMessageFor(model => model.Position, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="task-id" class="col-md-4 col-lg-3 col-form-label">Numero do
                                        Funcionário</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="@Model.Id" type="text" class="form-control" readonly />
                                    </div>
                                </div>


                                <div class="row mb-3">
                                </div>

                                <div class="row mb-3">

                                </div>

                                <div class="row mb-3">

                                </div>

                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary">
                                        Guardar Alterações
                                    </button>
                                </div>
                            </form>
                            <!-- Para validação do lado cliente -->
                            @section Scripts {
                                <partial name="_ValidationScriptsPartial" />
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
